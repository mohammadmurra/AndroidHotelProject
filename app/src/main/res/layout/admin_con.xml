<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Admin.AdminMainActivity"
    tools:showIn="@layout/activity_admin_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/LabelStyle"
            android:text="Hotel Admin Center" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="380dp"
            android:layout_height="187dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/hotel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView

                style="@style/AdminLabelStyle"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Single Rooms Number:" />

            <TextView
                android:id="@+id/SingleRoomNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/LabelStyle"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView

                style="@style/AdminLabelStyle"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Double Rooms Number:" />

            <TextView
                android:id="@+id/DoubleRoomNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/LabelStyle"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView

                style="@style/AdminLabelStyle"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delux Rooms Number:" />

            <TextView
                android:id="@+id/DeluxRoomNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/LabelStyle"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                style="@style/AdminLabelStyle"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Single Room Reserved :" />

            <TextView
                android:id="@+id/SingleReserved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/LabelStyle"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <TextView
                style="@style/AdminLabelStyle"
                android:layout_width="224dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Double Room Reserved :" />

            <TextView
                android:id="@+id/DoubleReservd"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/AdminLabelStyle"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delux Room Reserved :" />

            <TextView
                android:id="@+id/DeluxReserved"
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0" />
        </LinearLayout>

        <Button
            android:id="@+id/adminfab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_weight="1"
            android:onClick="AdminMenu"
            android:text="Open Admin Menu"
            app:srcCompat="@drawable/ic_baseline_add_24" />

        <Button
            android:id="@+id/adminfab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_weight="1"
            android:onClick="GoToHomePage"
            android:text="Go To Home Page"
            app:srcCompat="@drawable/ic_baseline_add_24" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>